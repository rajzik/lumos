{
  "private": true,
  "name": "lumos-root",
  "version": "0.0.0",
  "scripts": {
    "prepare": "beemo create-config eslint prettier",
    "setup": "tsc --build",
    "clean": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "build": "beemo typescript --build --reference-workspaces",
    "test": "yarn run build && yarn run jest && yarn run eslint",
    "eslint": "beemo eslint .",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "prerelease": "yarn run clean",
    "prerelease-alpha": "yarn run clean",
    "release-alpha": "git reset --hard && beemo run-script pre-release",
    "release": "git reset --hard && beemo run-script auto-release"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rajzik/lumos.git"
  },
  "author": "Silhan Jan",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "beemo": {
    "module": "@rajzik/lumos",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "eslint": {
      "env": {
        "node": true
      },
      "rules": {
        "import/prefer-default-export": "off",
        "@typescript-eslint/interface-name-prefix": "off"
      },
      "ignore": [
        "*.config.js"
      ]
    },
    "prettier": {
      "ignore": [
        "*.ejs"
      ]
    },
    "typescript": {
      "exclude": [
        "*.test.ts"
      ]
    }
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@beemo/core": "^1.1.2",
    "@beemo/cli": "^1.0.8",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.1",
    "husky": "^4.2.1",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.1"
  }
}
